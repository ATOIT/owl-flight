@using DressShopWebUI.Controllers
@model IEnumerable<Domain.Entityes.OrderDetails>

@{
    ViewBag.Title = "Замовлення";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<label for="orderSelect">Фільтр замовлень</label>
<select id="orderSelect">
    <option></option>
    <option value="@((int) SortType.None)">Всі замовлення</option>
    <option value="@((int) SortType.Before)">Обрати нові замовлення</option>
    <option value="@((int) SortType.Later)">Обрати виконані замовлення </option>
</select>
<br /><br />

@if (Model.Count().Equals(0))
{
    <h2 align="center">у вас немає замовлень</h2>
}
@if (!Model.Count().Equals(0))
{
    <div id="OrdersInAdmin">
        @Html.Partial("Orders", Model)
    </div>
}
<script>
    $(document)
        .ready(function() {
            $("#orderSelect")
                .change(function() {
                    var data = {
                        sortType: $("#orderSelect option:selected").val()
                    };
                    $.ajax({
                        url: "/Admin/OrdeResult",
                        type: "POST",
                        data: data,
                        success: function(data) {
                            $("#OrdersInAdmin").html(data);
                        }
                    });
                });
        });
</script>



