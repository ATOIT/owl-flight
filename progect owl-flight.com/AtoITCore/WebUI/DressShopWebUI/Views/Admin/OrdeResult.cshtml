@model IEnumerable<Domain.Entityes.OrderDetails>

@{
    ViewBag.Title = "OrdeResult";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ClientName)
