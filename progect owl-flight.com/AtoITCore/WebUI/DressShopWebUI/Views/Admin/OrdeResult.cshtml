        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.ActionLink("Виконано", "Edit", new { id=item.OrderId }) |
            @Html.ActionLink("Новий заказ", "Details", new { id=item.OrderId }) |
